{% extends "layout.html.jinja" %}

{% block middle %}

    <div class="style-dv" style="position: fixed; top: 40%; left: 60%; transform: translate(-40%, -40%);">
    <h2>Pobranie danych produktu</h2>
    <div>{{ error }}</div>

    <form class="row g-3" method="POST">
    <div class="col-auto">
        <label for="productId" class="form-control-plaintext">Podaj kod produktu</label>
    </div>
    <div class="col-auto">
        <input type="text" class="form-control" id="id" name="id" placeholder="Kod produktu" required>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Pobierz</button>
    </form>
    </div>

{% endblock middle %}